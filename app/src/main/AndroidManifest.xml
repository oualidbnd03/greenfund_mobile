<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions réseau -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permissions pour les notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Permissions pour l'authentification biométrique -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Permissions pour le stockage (pour les images de profil) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permissions pour la caméra (pour les photos de profil) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".CrowdfundProApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CrowdfundPro"
        android:usesCleartextTraffic="false"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Activité de démarrage (Splash Screen) -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CrowdfundPro.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activités d'authentification -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Auth"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Auth"
            android:screenOrientation="portrait" />

        <!-- Activité principale (Tableau de bord) -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main" />

        <!-- Activités de gestion des projets -->
        <activity
            android:name=".ui.projects.ProjectListActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main" />

        <activity
            android:name=".ui.projects.ProjectDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main"
            android:parentActivityName=".ui.projects.ProjectListActivity" />

        <activity
            android:name=".ui.projects.ProjectCreateActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main"
            android:parentActivityName=".ui.projects.ProjectListActivity" />

        <!-- Activités d'investissement -->
        <activity
            android:name=".ui.investments.InvestmentActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main"
            android:parentActivityName=".ui.projects.ProjectDetailActivity" />

        <activity
            android:name=".ui.investments.InvestmentHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main"
            android:parentActivityName=".ui.dashboard.DashboardActivity" />

        <!-- Activités sociales -->
        <activity
            android:name=".ui.social.CommentsActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main"
            android:parentActivityName=".ui.projects.ProjectDetailActivity" />

        <activity
            android:name=".ui.social.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main" />

        <!-- Activités de paramètres -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.CrowdfundPro.Main"
            android:parentActivityName=".ui.dashboard.DashboardActivity" />

        <!-- Service de notifications Firebase -->
        <service
            android:name=".services.CrowdfundProFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Receiver pour les notifications -->
        <receiver
            android:name=".receivers.NotificationReceiver"
            android:exported="false" />

        <!-- Provider pour le partage de fichiers -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Métadonnées Firebase -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primary_blue" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <!-- Configuration de sécurité réseau -->
        <meta-data
            android:name="android.security.net.config"
            android:resource="@xml/network_security_config" />

    </application>

</manifest>

