<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/surface_dark"
            android:elevation="@dimen/elevation_small"
            android:paddingHorizontal="@dimen/padding_medium">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tableau de bord"
                android:textColor="@color/text_primary_dark"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_notifications"
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@drawable/ic_notifications"
                android:tint="@color/text_primary_dark"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/spacing_xs"
                android:contentDescription="Notifications" />

        </LinearLayout>

        <!-- Statistiques principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_medium">

            <!-- Total investi -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_total_invested"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="@dimen/border_radius_large"
                app:cardElevation="@dimen/elevation_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_euro"
                        android:tint="@color/accent_green"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        android:id="@+id/tv_total_invested"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0€"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total investi"
                        android:textColor="@color/text_secondary_dark"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Projets -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_projects"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="@dimen/border_radius_large"
                app:cardElevation="@dimen/elevation_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_folder"
                        android:tint="@color/primary_blue"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        android:id="@+id/tv_total_projects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projets"
                        android:textColor="@color/text_secondary_dark"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Détails des investissements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium">

            <!-- Investissements actifs -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/surface_dark_elevated"
                app:cardCornerRadius="@dimen/border_radius_medium"
                app:cardElevation="@dimen/elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_active_investments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/warning"
                        android:textSize="@dimen/text_size_subtitle"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actifs"
                        android:textColor="@color/text_tertiary_dark"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Investissements terminés -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/surface_dark_elevated"
                app:cardCornerRadius="@dimen/border_radius_medium"
                app:cardElevation="@dimen/elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_small"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_completed_investments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/success"
                        android:textSize="@dimen/text_size_subtitle"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terminés"
                        android:textColor="@color/text_tertiary_dark"
                        android:textSize="@dimen/text_size_caption" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Graphiques -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="@dimen/border_radius_large"
            app:cardElevation="@dimen/elevation_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Répartition des investissements"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="@dimen/text_size_subtitle"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart_investments"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Évolution -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="@dimen/border_radius_large"
            app:cardElevation="@dimen/elevation_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Évolution des investissements"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="@dimen/text_size_subtitle"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/line_chart_progress"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Activité récente -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="@dimen/border_radius_large"
            app:cardElevation="@dimen/elevation_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Activité récente"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="@dimen/text_size_subtitle"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_view_all_investments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voir tout"
                        android:textColor="@color/primary_blue"
                        android:textSize="@dimen/text_size_caption"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="@dimen/spacing_xs" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_recent_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Actions rapides -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_large">

            <Button
                android:id="@+id/btn_view_all_projects"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:text="Voir les projets"
                android:textColor="@color/text_primary_dark"
                android:background="@drawable/button_gradient_primary" />

            <Button
                android:id="@+id/btn_create_project"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_medium"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="Créer un projet"
                android:textColor="@color/primary_blue"
                app:strokeColor="@color/primary_blue" />

        </LinearLayout>

        <!-- Indicateur de chargement -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_lg"
            android:indeterminateTint="@color/primary_blue"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>

